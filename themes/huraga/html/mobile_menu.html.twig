<ul class="space-y-2 text-sm">
    {% if settings.side_menu_dashboard %}
        <li><a class="flex items-center gap-3 rounded-xl px-3 py-2 text-slate-600 hover:bg-primary-50 hover:text-primary-600" href="{{ dashboard_link() }}">{{ 'Dashboard'|trans }}</a></li>
    {% endif %}
    {% if settings.side_menu_order %}
        <li><a class="flex items-center gap-3 rounded-xl px-3 py-2 text-slate-600 hover:bg-primary-50 hover:text-primary-600" href="{{ '/order'|link }}">{{ 'Order'|trans }}</a></li>
    {% endif %}
    {% if client or not settings.hide_menu %}
        {% if settings.side_menu_support %}
            <li><a class="flex items-center gap-3 rounded-xl px-3 py-2 text-slate-600 hover:bg-primary-50 hover:text-primary-600" href="{{ dashboard_link('support') }}">{{ 'Support'|trans }}</a></li>
        {% endif %}
        {% if settings.side_menu_services %}
            <li><a class="flex items-center gap-3 rounded-xl px-3 py-2 text-slate-600 hover:bg-primary-50 hover:text-primary-600" href="{{ dashboard_link('services') }}">{{ 'Services'|trans }}</a></li>
        {% endif %}
        {% if settings.side_menu_invoices %}
            <li><a class="flex items-center gap-3 rounded-xl px-3 py-2 text-slate-600 hover:bg-primary-50 hover:text-primary-600" href="{{ dashboard_link('invoices') }}">{{ 'Invoices'|trans }}</a></li>
        {% endif %}
        {% if settings.side_menu_emails %}
            <li><a class="flex items-center gap-3 rounded-xl px-3 py-2 text-slate-600 hover:bg-primary-50 hover:text-primary-600" href="{{ dashboard_link('emails') }}">{{ 'Email'|trans }}</a></li>
        {% endif %}
        {% if settings.side_menu_payments %}
            <li><a class="flex items-center gap-3 rounded-xl px-3 py-2 text-slate-600 hover:bg-primary-50 hover:text-primary-600" href="{{ dashboard_link('account/balance') }}">{{ 'Wallet'|trans }}</a></li>
        {% endif %}
        {% if guest.extension_is_on({"mod":"news"}) and settings.side_menu_news %}
            <li><a class="flex items-center gap-3 rounded-xl px-3 py-2 text-slate-600 hover:bg-primary-50 hover:text-primary-600" href="{{ '/news'|link }}">{{ 'News'|trans }}</a></li>
        {% endif %}
        {% if guest.support_kb_enabled() and settings.side_menu_kb %}
            <li><a class="flex items-center gap-3 rounded-xl px-3 py-2 text-slate-600 hover:bg-primary-50 hover:text-primary-600" href="{{ 'support/kb'|link }}">{{ 'Knowledge Base'|trans }}</a></li>
        {% endif %}
        {% if settings.sidebar_balance_enabled and client %}
            <li class="rounded-xl bg-primary-50 px-3 py-2 text-slate-700">
                <p class="text-xs font-semibold uppercase tracking-wide text-primary-600">{{ 'Account balance'|trans }}</p>
                <p class="text-base font-semibold text-primary-700">{{ profile.balance | money(profile.currency) }}</p>
            </li>
        {% endif %}
        {% if settings.sidebar_note_enabled %}
            <li class="rounded-xl border border-dashed border-primary-200 px-3 py-2 text-slate-600">
                <p class="text-xs font-semibold uppercase tracking-wide text-primary-600">{{ settings.sidebar_note_title }}</p>
                <p class="mt-1 text-sm leading-relaxed">{{ settings.sidebar_note_content }}</p>
            </li>
        {% endif %}
    {% endif %}
    {% if settings.top_menu_signout %}
        <li class="border-t border-slate-200 pt-3 mt-3">
            {% if client %}
                <div class="flex items-center justify-between gap-3">
                    <a class="flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-1 text-sm font-medium text-slate-700 hover:border-primary-500 hover:text-primary-600" href="{{ dashboard_link('account/profile') }}">
                        <img class="h-8 w-8 rounded-full" alt="{{ profile.first_name }} {{ profile.last_name }} gravatar" src="{{ profile.email|gravatar(60) }}">
                        <span>{{ profile.first_name }} {{ profile.last_name }}</span>
                    </a>
                    <a class="btn btn-outline-secondary" href="{{ dashboard_link('account/logout') }}">{{ 'Sign out'|trans }}</a>
                </div>
            {% else %}
                <div class="grid grid-cols-2 gap-2">
                    <a class="btn btn-outline-secondary" href="{{ 'login'|link }}">{{ 'Login'|trans }}</a>
                    <a class="btn btn-primary" href="{{ 'signup'|link }}">{{ 'Register'|trans }}</a>
                </div>
            {% endif %}
        </li>
    {% endif %}
</ul>
